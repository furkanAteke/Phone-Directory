<div class="container bg-dark mt-5 p-5 rounded-5">
    <!-- Giriş Formu -->
    <h1 class="text-center text-uppercase fs-3 me-3 text-light menuTittle">GİRİŞ YAP</h1>
    <hr class="mt-2">
    <form id="loginForm" asp-action="Login" method="post">
        <div class="row text-center pt-2">
            <div class="col-sm-3">
                <label for="username" class="text-light">Kullanıcı Adı:</label>
            </div>
            <div class="col-sm-9">
                <input name="username" type="text" class="form-control" id="username" placeholder="Kullanıcı Adı" required>
            </div>
        </div>
        <div class="row text-center pt-2 mt-4">
            <div class="col-sm-3">
                <label for="password" class="text-light">Şifre:</label>
            </div>
            <div class="col-sm-9">
                <input name="password" type="password" class="form-control" id="password" placeholder="Şifre" required>
            </div>
        </div>
        <div class="row text-center pt-2 mt-4">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success" id="login">GİRİŞ YAP</button>
            </div>
        </div>
    </form>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3 text-center">
            @ViewBag.Error
        </div>
    }
</div>

<div id="alert-container"></div>

<script>
    function showAlert(type, message) {
        const div = document.createElement("div");
        div.className = "alert alert-" + type + " alert-dismissible fade show";
        div.textContent = message;
        $("#alert-container").append(div);
        setTimeout(function () {
            div.remove();
        }, 3000);
    }
</script>